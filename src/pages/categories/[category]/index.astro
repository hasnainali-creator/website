---
import { categoriesHandler } from "@/lib/handlers/categories";

export async function getStaticPaths() {
  const catProvider = await categoriesHandler.getProvider();
  const categories = catProvider.categories;
  return categories.map((category) => ({ params: { category: category.id } }));
}

const { category } = Astro.params;
---

<!-- TODO: show last articles and fix pagination -->
<meta http-equiv="refresh" content={`0; url=${`/categories/${category}/1`}`} />
