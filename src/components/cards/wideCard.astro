---
import { Image, Picture } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { getDateDistance, normalizeDate } from "@/lib/utils/date";
import Divider from "../bases/divider.astro";
import { categoriesHandler, normalizeCategoryData } from "@/lib/handlers/categories";
const catProvider = await categoriesHandler.getProvider();
import UpdatedBadge from "@/components/shared/UpdatedBadge.astro";

type Props = {
  article: CollectionEntry<"articles">;
  isLast: boolean;
};

const { article, isLast } = Astro.props;
const { remarkPluginFrontmatter } = await render(article);
---

<li
  class="group w-full max-w-md mx-auto lg:max-w-full relative isolate flex flex-col lg:flex-row gap-4"
>
  <div
    class="flex-shrink-0 aspect-square w-32 text-sm text-base-content/60 text-pretty capitalize hidden lg:flex pt-1"
  >
    {getDateDistance(normalizeDate(article.data.publishedTime))}
  </div>
  <div
    class:list={[
      "flex-1 flex flex-col gap-4 lg:flex-row-reverse pb-2 lg:pb-4",
      isLast ? "border-b-0" : "border-b border-base-300",
    ]}
  >
    <div class="w-full lg:w-60 aspect-video relative">
      <UpdatedBadge 
        lastModified={remarkPluginFrontmatter.lastModified} 
        publishedTime={article.data.publishedTime}
        hideBadge={article.data.hideBadge}
        corner={true} 
      />
      <Picture
        src={article.data.cover}
        alt={article.data.coverAlt || article.data.title || "Sports News Article"}
        layout="constrained"
        loading={"eager"}
        widths={[400, 800]}
        sizes="(max-width: 1024px) 100vw, 400px"
        formats={["avif", "webp"]}
        fallbackFormat="jpg"
        decoding="async"
        class="aspect-video rounded w-full h-full object-cover"
      />
    </div>
    <div class="flex-1 space-y-2">
      <h3 class="text-xl font-semibold lg:group-hover:underline">
        <a href={`/articles/${article.id}`}>
          <span class="absolute inset-0 z-10"></span>
          {article.data.title}
        </a>
      </h3>
      <p class="text-base-content/80 max-w-xl text-pretty">
        {article.data.description}
      </p>
    </div>
    <div class="text-sm lg:hidden flex item-center text-base-content/70 pt-2">
      <time
        class="flex items-center gap-1"
        datetime={normalizeDate(article.data.publishedTime)}
      >
        <span>
          {getDateDistance(normalizeDate(article.data.publishedTime))}
        </span>
      </time>
      <Divider />
      <small class="flex items-center gap-1">
        <span class="capitalize text-sm">
          {catProvider.getDisplayPath(normalizeCategoryData(article.data.category)[0]?.discriminant || "uncategorized")}
        </span>
      </small>
    </div>
  </div>
</li>
