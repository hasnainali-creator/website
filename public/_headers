# Caching for optimized assets (Astro build output)
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Caching for local fonts
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Global Safety and Security for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), camera=(), microphone=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  # CDN Cache (Edge Caching) - Instructs Cloudflare to cache HTML for 1 hour
  Cache-Control: public, s-maxage=3600, stale-while-revalidate=600

# Caching for favicons
/favicon*
  Cache-Control: public, max-age=31536000, immutable

# Caching for manifest
/site.webmanifest
  Cache-Control: public, max-age=31536000, immutable
